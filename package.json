{
  "name": "paul-andrei-onac",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "private": true,
  "scripts": {
    "format": "prettier . --write",
    "check": "prettier . --check",
    "clean": "rm -rf public resources",
    "build": "hugo -b $CF_PAGES_URL --minify",
    "dev": "hugo server --watch --disableFastRender --ignoreCache --cleanDestinationDir --gc",
    "development": "npm run dev",
    "prod": "hugo -e production --minify --ignoreCache --cleanDestinationDir --gc",
    "production": "npm run prod",
    "lint": "npm run lint:markdown & npm run lint:javascript & npm run lint:style",
    "lint:markdown": "markdownlint **/*.md -i node_modules",
    "lint:javascript": "eslint assets/**/*.js themes/**/assets/**/*.js --no-error-on-unmatched-pattern",
    "lint:style": "stylelint assets/**/*.scss themes/**/assets/**/*.scss --ignore-pattern /vendor/"
  },
  "author": "Paul-Andrei Onac",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://gitlab.com/paul-andrei-onac/paul-andrei-onac.git"
  },
  "homepage": "https://gitlab.com/paul-andrei-onac/paul-andrei-onac#readme",
  "bugs": {
    "url": "https://gitlab.com/paul-andrei-onac/paul-andrei-onac/issues"
  },
  "devDependencies": {
    "@algolia/cli": "^4.0.8",
    "@babel/cli": "^7.17.10",
    "@babel/core": "^7.17.10",
    "@babel/preset-env": "^7.17.10",
    "autoprefixer": "^10.4.14",
    "babelify": "^10.0.0",
    "browserify": "^16.5.2",
    "core-js": "^3.22.4",
    "husky": "^7.0.0",
    "postcss": "^8.4.23",
    "postcss-cli": "^10.1.0",
    "segmentit": "^2.0.3"
  }
}
